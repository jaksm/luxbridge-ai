{
  "name": "next.js-mcp-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run blockchain:compile && next build",
    "start": "next start",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "admin-cli": "dotenv -e .env.local -- npx tsx bin/admin-cli.ts",
    "blockchain:compile": "cd blockchain && hardhat compile",
    "blockchain:test": "cd blockchain && hardhat test",
    "blockchain:node": "cd blockchain && hardhat node",
    "blockchain:deploy": "cd blockchain && hardhat run scripts/deploy/01-deploy-factory.ts --network localhost",
    "blockchain:deploy:full": "cd blockchain && hardhat run scripts/deploy/04-deploy-full-system.ts --network localhost",
    "test:tools:setup": "cd blockchain && npx tsx test-environment/setup-local-chain.ts",
    "test:tools:cleanup": "cd blockchain && npx tsx test-environment/cleanup-environment.ts",
    "test:tools:simple": "cd blockchain && npx tsx test-tools/run-simple-tests.ts",
    "test:tools:simple:verbose": "cd blockchain && npx tsx test-tools/run-simple-tests.ts --verbose",
    "test:tools": "cd blockchain && npx tsx test-tools/test-all-tools.ts",
    "test:tools:verbose": "cd blockchain && npx tsx test-tools/test-all-tools.ts --verbose",
    "test:tools:individual": "cd blockchain && npx tsx test-tools/test-all-tools.ts --no-setup",
    "test:scenarios": "cd blockchain && npx tsx test-scenarios/end-to-end-trading.ts && npx tsx test-scenarios/cross-platform-arbitrage.ts",
    "test:integration": "npm run test:tools:simple && npm run test:scenarios",
    "subgraph:codegen": "cd blockchain/subgraph && graph codegen",
    "subgraph:build": "cd blockchain/subgraph && graph build",
    "subgraph:deploy": "cd blockchain/subgraph && graph deploy --node http://localhost:8020/ luxbridge/rwa-trading",
    "generate:asset-ids": "dotenv -e .env.local -- npx tsx scripts/generate-asset-ids.ts",
    "generate:platform-assets": "dotenv -e .env.local -- npx tsx scripts/generate-platform-assets.ts",
    "migrate:redis-to-pinecone": "dotenv -e .env.local -- npx tsx scripts/migrate-redis-to-pinecone.ts",
    "migrate:user-mappings": "dotenv -e .env.local -- npx tsx scripts/migrate-user-mappings.ts",
    "clear-sessions": "dotenv -e .env.local -- npx tsx scripts/clear-sessions.ts",
    "register-oauth-clients": "dotenv -e .env.local -- npx tsx scripts/register-oauth-clients.ts"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.2.0",
    "@hookform/resolvers": "^5.1.1",
    "@langchain/openai": "^0.5.18",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@openzeppelin/contracts": "^5.0.2",
    "@pinecone-database/pinecone": "^6.1.1",
    "@privy-io/react-auth": "^2.17.3",
    "@privy-io/server-auth": "^1.28.2",
    "@radix-ui/react-alert-dialog": "^1.1.4",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@vercel/mcp-adapter": "0.8.2",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^12.1.0",
    "dotenv": "^17.0.1",
    "inquirer": "^11.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.29",
    "lucide-react": "^0.468.0",
    "mustache": "^4.2.0",
    "next": "15.2.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "redis": "^4.7.0",
    "tailwind-merge": "^2.5.5",
    "tsx": "^4.20.3",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.97.1",
    "@graphprotocol/graph-ts": "^0.35.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/inquirer": "^9.0.7",
    "@types/mocha": ">=9.1.0",
    "@types/mustache": "^4.2.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.8",
    "postcss": "^8.5.0",
    "prettier": "^3.4.2",
    "solidity-coverage": "^0.8.0",
    "tailwindcss": "^3.4.17",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
